<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:divider="@drawable/filter_ll_divider_hotizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="upp.foodonet.MyPublicationDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_panel_height_ldpi">

        <TextView
            android:id="@+id/tv_title_pub_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/basic_blue"
            android:gravity="center"
            android:text="@string/publication_details_title"
            android:textColor="@color/white"
            android:textSize="@dimen/top_panel_text_size"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btn_menu_pub_details"
            android:layout_width="@dimen/pub_details_menu_width"
            android:layout_height="@dimen/pub_details_menu_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/pub_details_menu_marginRight"
            android:layout_marginTop="@dimen/pub_details_menu_marginTop_ldpi"
            android:background="@color/basic_blue"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_header_button"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/pub_details_menu_text_size" />

        <Button
            android:id="@+id/btn_leave_report_pub_details"
            android:layout_width="@dimen/pub_details_btn_leave_report_width"
            android:layout_height="@dimen/pub_details_btn_leave_report_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/pub_details_btn_leave_report_marginRight_ldpi"
            android:layout_marginTop="@dimen/pub_details_btn_leave_report_marginTop_ldpi"
            android:background="@color/basic_blue"
            android:text="@string/leave_report_pub_details"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/pub_details_top_panel_right_text_size" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_details_pub_props_panel_height_ldpi"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/pub_details_pub_props_ll_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/pub_details_pub_props_ll_marginLeft"
            android:layout_marginRight="@dimen/pub_details_pub_props_ll_marginRight"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pub_details_pub_props_rl_height"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_user_reg_icon_pub_details"
                    android:layout_width="@dimen/pub_details_iv_user_reg_icon_height_width"
                    android:layout_height="@dimen/pub_details_iv_user_reg_icon_height_width"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/pub_details_iv_user_reg_icon_marginRight"
                    android:scaleType="fitCenter"
                    android:src="@drawable/user_icon_blue" />

                <TextView
                    android:id="@+id/tv_num_of_reged_pub_details"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pub_details_tv_num_of_reged_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/pub_details_tv_num_of_reged_marginRight"
                    android:layout_toLeftOf="@+id/iv_user_reg_icon_pub_details"
                    android:textSize="@dimen/pub_details_tv_num_of_reged_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/pub_details_tv_num_of_reged_marginRight"
                    android:layout_toLeftOf="@+id/tv_num_of_reged_pub_details"
                    android:text="@string/pub_det_on_the_way_to_take"
                    android:textSize="@dimen/pub_details_on_the_way_to_take_text_size"
                    android:textColor="@color/edit_text_input_default_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pub_details_pub_props_rl_height"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_address_pub_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/pub_details_tv_address_marginRight"
                    android:layout_marginTop="@dimen/pub_details_tv_address_marginTop"
                    android:textSize="@dimen/pub_details_address_text_size"
                    android:textColor="@color/edit_text_input_default_color"/>

                <TextView
                    android:id="@+id/tv_distance_pub_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_address_pub_details"
                    android:layout_marginRight="@dimen/pub_details_tv_address_marginRight"
                    android:layout_marginTop="@dimen/pub_details_tv_distance_marginTop"
                    android:fontFamily="Arial"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textSize="@dimen/pub_details_distance_text_size"
                    android:textColor="@color/edit_text_input_default_color"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/pub_details_riv_image_rl_width"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <UIUtil.RoundedImageView
                android:id="@+id/riv_image_pub_details"
                android:layout_width="@dimen/pub_details_image_size"
                android:layout_height="@dimen/pub_details_image_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_others_pub_dets_buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_details_btns_panel_height_ldpi"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_register_unregister_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/rishum_pub_det_btn" />

        <ImageButton
            android:id="@+id/btn_navigate_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/navigate_pub_det_btn" />

        <ImageButton
            android:id="@+id/btn_message_owner_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/pub_det_sms" />

        <ImageButton
            android:id="@+id/btn_call_owner_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginRight="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/pub_det_call" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_pub_dets_buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_details_btns_panel_height_ldpi"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_facebook_my_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/pub_det_facebook" />

        <ImageButton
            android:id="@+id/btn_tweet_my_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/pub_det_twitter" />

        <ImageButton
            android:id="@+id/btn_message_reged_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_sms_inactive_pub_det" />

        <ImageButton
            android:id="@+id/btn_call_reged_pub_details"
            android:layout_width="@dimen/pub_details_btn_in_panel_width"
            android:layout_height="@dimen/pub_details_btn_in_panel_height"
            android:layout_marginLeft="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginRight="@dimen/pub_details_btn_in_panel_marginLeft"
            android:layout_marginTop="@dimen/pub_details_btn_in_panel_margin_top_ldpi"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_call_inactive_pub_det" />
        <!---->
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pub_details_subtitle_paddingBottomTop_ldpi"
        android:paddingLeft="@dimen/pub_details_subtitle_paddingLeftRight"
        android:paddingRight="@dimen/pub_details_subtitle_paddingLeftRight"
        android:paddingTop="@dimen/pub_details_subtitle_paddingBottomTop_ldpi">

        <TextView
            android:id="@+id/tv_subtitle_pub_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pub_details_time_paddingBottomTop_ldpr"
        android:paddingRight="@dimen/pub_details_time_paddingBottomRight_ldpr"
        android:paddingTop="@dimen/pub_details_time_paddingBottomTop_ldpr">

        <TextView
            android:id="@+id/tv_start_time_pub_details"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pub_details_tv_time_height"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/title_begin_pub_details"
            android:textColor="@color/edit_text_input_default_color"/>

        <TextView
            android:id="@+id/tv_end_time_pub_details"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pub_details_tv_time_height"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/title_end_pub_details"
            android:textColor="@color/edit_text_input_default_color"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/ll_reports_list_pub_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pub_details_reports_paddingLeftRightTop"
        android:paddingRight="@dimen/pub_details_reports_paddingLeftRightTop"
        android:paddingTop="@dimen/pub_details_reports_paddingLeftRightTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/pub_det_reports_for_pub"
            android:textColor="@color/edit_text_input_default_color"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_no_reports_for_pub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/pub_det_no_reports_for_pub"
            android:textColor="@color/edit_text_input_default_color"/>

        <ListView
            android:id="@+id/lv_list_of_reports_pub_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pub_details_lv_list_of_reports_marginTop"/>

    </LinearLayout>
