<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SplashScreenActivity"
    android:background="@color/white">

    <ImageView android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/foodonet_logo_200_200"/>

    <LinearLayout android:id="@+id/ll_first_load_info"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_panel_height"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_image">

        <TextView android:id="@+id/tv_progress_text_splash_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/address_dialog_history_item_right_margin"/>

        <ProgressBar
            android:layout_width="@dimen/top_panel_height"
            android:layout_height="@dimen/top_panel_height"/>

    </LinearLayout>

</RelativeLayout>
