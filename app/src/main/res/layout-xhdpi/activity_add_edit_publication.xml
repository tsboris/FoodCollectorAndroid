    <TextView
        android:id="@+id/tv_set_date_start_add_pub"
        android:layout_width="165dp"
        android:layout_height="@dimen/top_panel_height"
        android:textSize="@dimen/add_pub_et_date_text_size"
        android:text="@string/start_string"
        android:layout_below="@+id/et_address_edit_add_pub"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/edit_text_side_margin_add_edit_pub"
        android:gravity="center_vertical|right"/>

    <TextView
        android:id="@+id/tv_set_date_end_add_pub"
        android:layout_width="165dp"
        android:layout_height="@dimen/top_panel_height"
        android:textSize="@dimen/add_pub_et_date_text_size"
        android:text="@string/end_string"
        android:layout_below="@+id/tv_set_date_start_add_pub"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|right"
        android:layout_marginRight="@dimen/edit_text_side_margin_add_edit_pub" />

    <EditText
        android:id="@+id/et_additional_info_add_edit_pub"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/add_phoneNumber_string"
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@+id/btn_end_date_time_add_pub"
        android:textColorHighlight="@color/basic_blue"
        android:textSize="@dimen/add_pub_et_date_text_size"
        android:layout_marginRight="@dimen/edit_text_side_margin_add_edit_pub"
        android:layout_marginLeft="@dimen/edit_text_side_margin_add_edit_pub" />

    <EditText
        android:id="@+id/et_subtitle_add_edit_pub"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/another_details_string"
        android:ems="10"
        android:layout_below="@+id/et_additional_info_add_edit_pub"
        android:textColorHighlight="@color/basic_blue"
        android:textSize="@dimen/add_pub_et_date_text_size"
        android:layout_marginRight="@dimen/edit_text_side_margin_add_edit_pub"
        android:layout_marginLeft="@dimen/edit_text_side_margin_add_edit_pub" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/btn_camera_add_pub"
        android:layout_alignBottom="@+id/imgAddPicture"
        android:src="@drawable/camera_xxh"
        android:background="@color/transparent"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="-15dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>