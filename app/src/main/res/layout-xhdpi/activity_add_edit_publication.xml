    <Button
        android:id="@+id/btn_start_date_time_add_pub"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_panel_height"
        android:text="@string/no_time_set_string"
        android:layout_below="@+id/et_address_edit_add_pub"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:textSize="@dimen/add_pub_et_date_text_size"
        android:layout_marginLeft="13dp"/>
