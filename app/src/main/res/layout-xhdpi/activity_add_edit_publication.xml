<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_panel_height"
        android:background="@color/basic_blue"
        android:id="@+id/textView"
        android:textSize="@dimen/top_panel_text_size"/>

    <ImageButton
        android:id="@+id/publishButton"
        android:layout_width="@dimen/add_pub_pub_btn_size"
        android:layout_height="@dimen/add_pub_pub_btn_size"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:src="@drawable/done_xxh"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/edit_text_side_margin_add_edit_pub"
        android:layout_marginTop="@dimen/edit_text_side_margin_add_edit_pub"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

