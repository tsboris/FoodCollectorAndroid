            android:id="@+id/chkCallToPublisher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:paddingRight="11dp"
            android:text="@string/call_to_publisher_string" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView
            android:id="@+id/imgAddPicture"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal|top" />
            <!--android:src="@drawable/camera"-->


        <TextView
            android:id="@+id/tvAddPicture"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:paddingRight="11dp"
            android:text="@string/add_pic_string" />

    </LinearLayout>



    <ImageView
        android:id="@+id/imgView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/no_photo_placeholder" />

    <Button
