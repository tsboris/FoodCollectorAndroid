    <!--Start Date and Time-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/start_time_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_time_set_string" />


        <Button
            android:id="@+id/start_date_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_date_set_string" />

        <TextView
            android:id="@+id/startTitle"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:paddingRight="11dp"
            android:text="@string/start_string" />

    </LinearLayout>

    <!--End Date and Time-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
