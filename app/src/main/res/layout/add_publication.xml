    <!--Start Date and Time-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_time_set_string" />

        <Button
            android:id="@+id/start_time_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_time_string" />

        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_date_set_string" />

        <Button
            android:id="@+id/start_date_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_date_string" />

        <TextView
            android:id="@+id/startTitle"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="@string/start_string" />

    </LinearLayout>

    <!--End Date and Time-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_time_set_string" />

        <Button
            android:id="@+id/end_time_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_time_string" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_date_set_string" />

        <Button
            android:id="@+id/end_date_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_date_string" />

        <TextView
            android:id="@+id/endTitle"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="@string/end_string" />

    </LinearLayout>


    <RadioGroup
        android:id="@+id/pickupMethodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">


        <RadioButton
            android:id="@+id/callToPublisher"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/call_to_publisher_string" />

        <RadioButton
            android:id="@+id/freePickup"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_gravity="right"
            android:text="@string/free_pickup_string" />
    </RadioGroup>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/no_photo_placeholder" />

    <Button
        android:id="@+id/publishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/publish_string" />
</LinearLayout>