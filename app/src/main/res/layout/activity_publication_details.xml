<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:divider="@drawable/filter_ll_divider_hotizontal"
    android:showDividers="middle"
    tools:context="upp.foodonet.MyPublicationDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_panel_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/basic_blue"
            android:gravity="center"
            android:text="@string/publication_details_title"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <ImageButton
            android:id="@+id/btn_menu_pub_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:background="@color/basic_blue"
            android:src="@drawable/menu_header_button"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/btn_leave_report_pub_details"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:background="@color/basic_blue"
            android:text="@string/leave_report_pub_details"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_pub_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_details_pub_title_height"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_details_pub_props_panel_height"
        android:orientation="horizontal"
        android:layoutDirection="rtl">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_user_reg_icon_pub_details"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/user_icon_blue"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_num_of_reged_pub_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/iv_user_reg_icon_pub_details"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/tv_num_of_reged_pub_details"
                    android:layout_marginRight="5dp"
                    android:text="@string/pub_det_on_the_way_to_take"
                    android:textSize="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_address_pub_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_distance_pub_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_address_pub_details"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:fontFamily="Arial"
                    android:gravity="right"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <UIUtil.RoundedImageView
                android:id="@+id/riv_image_pub_details"
                android:layout_width="@dimen/pub_details_image_size"
                android:layout_height="@dimen/pub_details_image_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_others_pub_dets_buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_details_btns_panel_height"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_register_unregister_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/rishum_pub_det_btn"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/btn_navigate_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/navigate_pub_det_btn"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/btn_message_owner_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/pub_det_sms"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/btn_call_owner_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/pub_det_call"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_pub_dets_buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_details_btns_panel_height"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_facebook_my_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/pub_det_facebook"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/btn_tweet_my_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/pub_det_twitter"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/btn_message_reged_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/btn_sms_inactive_pub_det"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/btn_call_reged_pub_details"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/btn_call_inactive_pub_det"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
<!---->
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/tv_subtitle_pub_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:text="@string/title_begin_pub_details"
            android:id="@+id/tv_start_time_pub_details"/>

        <TextView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/title_end_pub_details"
            android:id="@+id/tv_end_time_pub_details" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/pub_det_reports_for_pub" />
    <ListView
        android:id="@+id/lv_list_of_reports_pub_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>

