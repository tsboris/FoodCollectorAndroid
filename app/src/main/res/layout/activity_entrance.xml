<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_panel_height"
        android:layout_weight="0.10"
        android:background="@color/basic_blue"
        android:gravity="center"
        android:text="@string/welcome_string"
        android:textColor="@color/list_background"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share_welcomeScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish"
                android:textColor="@color/basic_blue"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <!--android:layout_marginRight="20dp"-->

            <Button
                android:id="@+id/btn_share_welcomeScreen"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_pick_welcomeScreen"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:drawingCacheQuality="high"
                android:textColor="@color/basic_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/tv_pick_welcomeScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pickup"
                android:textColor="@color/basic_blue"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <!--android:layout_marginRight="20dp"-->


            <Button
                android:id="@+id/btn_pick_welcomeScreen"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_share_welcomeScreen"
                android:layout_alignStart="@+id/btn_share_welcomeScreen"
                android:layout_below="@+id/welcome"
                android:background="@color/transparent"
                android:drawingCacheQuality="high"
                android:textColor="@color/basic_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_ask_welcomeScreen"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/btn_share_welcomeScreen"
                android:layout_alignStart="@+id/btn_share_welcomeScreen"
                android:layout_below="@+id/btn_share_welcomeScreen"
                android:background="@color/transparent"
                android:text="@string/ask_food"
                android:textColor="@color/basic_blue"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
