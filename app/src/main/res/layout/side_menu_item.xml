<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/side_menu_item_height">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/side_menu_item_icon_margin_right"
        android:src="@drawable/default_publication_icon_side_menu"/>

    <TextView android:id="@+id/tv_side_menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/side_menu_text_size"
        android:layout_marginRight="@dimen/side_menu_item_title_margin_right"
        android:textColor="@color/white"/>

    <View android:id="@+id/v_oval_score_background"
        android:layout_width="@dimen/side_menu_item_score_circle_size"
        android:layout_height="@dimen/side_menu_item_score_circle_size"
        android:background="@drawable/side_menu_score_circle"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView android:id="@+id/tv_side_menu_item_score"
        android:layout_width="@dimen/side_menu_item_score_circle_size"
        android:layout_height="@dimen/side_menu_item_score_circle_size"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/v_oval_score_background"
        android:layout_alignLeft="@id/v_oval_score_background"
        android:textSize="@dimen/side_menu_text_size"
        android:textColor="@color/white"
        android:gravity="center"/>

<!--
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="@dimen/side_menu_item_score_margin_left"
-->

</RelativeLayout>